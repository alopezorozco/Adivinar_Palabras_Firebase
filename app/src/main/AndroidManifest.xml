<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adivinar_palabras_firebase">

    <application
        android:name=".GlobalVariables"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Adivinar_Palabras_Firebase">
        <activity
            android:name=".CategoriaActivity"
            android:exported="false"
            android:parentActivityName=".EstadisticaActivity"/>
        <activity
            android:name=".DetailActivity"
            android:exported="false"
            android:parentActivityName=".CategoriaActivity"/>
        <activity
            android:name=".EstadisticaActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>